{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2021", "DOM"],
    "moduleResolution": "node16",
    "module": "node16",

    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
